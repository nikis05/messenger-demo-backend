{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "target": "esnext",
    "lib": ["ESNext"],
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "@util/*": ["util/*"]
    },
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
